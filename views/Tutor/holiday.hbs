<body class="theme-primary">

    <section style="margin-top: -500px;" class="py-50">
        <div class="container">
            <center>
                <h1 style="font-family: 'Times New Roman', Times, serif;">Holiday</h1>
            </center>


            <div class="row">

                <div class="col-lg-12 col-md-8 mt-3 col-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="tab-content" id="pills-tabContent23">
                                <div class="tab-pane fade show active" id="pills-edit" role="tabpanel"
                                    aria-labelledby="pills-edit-tab">
                                    <div class="row">
                                        <div class="col-12">
                                            <form action="/tutor/holiday" method="POST" class="form">
                                                <div>
                                                    <h4 class="box-title text-primary"><i class="ti-user mr-15"></i>Add
                                                        a Holiday</h4>
                                                    <hr class="my-15">
                                                    <div class='col-sm-offset-4 col-sm-4'>
                                                        <div class="form-group">
                                                            <div class='input-group date' id='datetimepicker1'>
                                                                <label>Select Date: </label>
                                                                <div id="datepicker" class="input-group date"
                                                                    data-date-format="dd-mm-yyyy">
                                                                    <input name="Date" onchange="datecheck();" id="date"
                                                                        class="form-control" type="text" readonly />
                                                                    <span class="input-group-addon"><i
                                                                            class="glyphicon glyphicon-calendar"></i></span>
                                                                </div>

                                                            </div>

                                                        </div>
                                                        <p class="help-block"><strong>Date format:</strong> dd-mm-yyyy
                                                        </p>

                                                    </div>

                                                    <button style="margin-left: 10px; margin-top: 10px;" id="button"
                                                        type="submit" class="btn btn-success">
                                                        Save
                                                    </button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="../socket.io/socket.io.js"></script>
    <script>
        var socket = io();
        document.getElementById("button").addEventListener("click", function () {
            var topic = document.getElementById("date").value + "     is a HOLIDAY";
            let type = "Holiday"
            socket.emit("message", topic, type)
        })


    </script>
    <script src="../Template/js/vendors.min.js"></script>
    <!-- Corenav Master JavaScript -->
    <script src="../Template/corenav-master/coreNavigation-1.1.3.js"></script>
    <script src="../Template//vendor_components/jquery-ui/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                minDate: new Date(),
                autoclose: true,
                todayHighlight: true
            }).datepicker('update', new Date());
        });

        function datecheck() {
            if (document.getElementById('date').value.substring(6, 10) < new Date().getFullYear()) {
                document.getElementById('date').value = ("0" + new Date().getDate()).slice(-2) + "-" + ("0" + (new Date().getMonth() + 1)).slice(-2) + "-" + new Date().getFullYear();
            }
        }
    </script>


</body>