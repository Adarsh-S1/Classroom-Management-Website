<head>

	<meta charset="utf-8" />
	<meta name="description" content="Headers datatables examples" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

	<link href="../Studtable/style.bundled1cf.css" rel="stylesheet" type="text/css" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet"
		type="text/css" />

</head>

<body id="kt_body"
	class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
	<div style="margin-top: -300px;" class="d-flex flex-column flex-root">

		<div class="d-flex flex-row flex-column-fluid page">

			<div class="d-flex flex-column flex-row-fluid" id="kt_wrapper">
				<center>
					<h1 style="margin-top: -50px; font-family: 'Times New Roman', Times, serif;">ATTENDANCE</h1>
				</center>
				<center>
					<h4 style="margin-top: -20px;">{{datecheck}}</h4>
				</center>

				<div class="content d-flex flex-column flex-column-fluid" id="kt_content">

					<div class="d-flex flex-column-fluid">
						<!--begin::Container-->

						<div class="container">


							<div class="card card-custom">

								<a href='/tutor/holiday'><button
										style="margin-bottom: -80px; margin-top: 20px; float: right; margin-right: 10px;"
										class="btn btn-success" type="submit">Give Holiday</button></a>

								<div style="margin-top: 50px;" class="container">
									<div class="row styling">
										<h3><strong
												style="margin-left: 10px; font-family: Georgia, 'Times New Roman', Times, serif;">Attendance
												DatePicker</strong></h3><br>
										<div class='col-sm-offset-4 col-sm-4'>
											<div class="form-group">
												<div class='input-group date' id='datetimepicker1'>
													<label>Select Date: </label>
													<div id="datepicker" class="input-group date"
														data-date-format="dd-mm-yyyy">
														<input id="date" class="form-control" type="text" readonly />
														<span class="input-group-addon"><i
																class="glyphicon glyphicon-calendar"></i></span>
													</div>

												</div>

											</div>
											<p class="help-block"><strong>Date format:</strong> dd-mm-yyyy</p>
											<a href=''
												onclick="this.href='/tutor/attendate/'+document.getElementById('date').value;"><button
													class="btn btn-success" type="submit">Submit</button></a>
										</div>
									</div><br>

									<hr>
									<img style="height: 23px; width: auto; "
										src="../Template/icons/themify-icons/SVG/info-alt.svg" alt="" srcset="">
									<p style="color: #32CD32; margin-top: -21px; margin-left: 30px;">Click on the
										student name to view his/her details .</p>

								</div>
								<div class="card-body">

									<!--begin: Datatable-->
									<table class="table table-bordered table-hover table-checkable " id="kt_datatable">
										<thead>

											<tr>
												<th>
													<center>Roll No</center>
												</th>
												<th>
													<center>Name</center>
												</th>
												<th>
													<center>Attendance</center>
												</th>
											</tr>
										</thead>
										<tbody>
											{{#each attendance}}
											<tr>
												{{#each this.student}}
												<td>
													<center>{{this.Rollno}}</center>
												</td>
												<td>
													<center><a style="color: black;"
															href="/tutor/studetails/{{../studId}}">{{this.Name}}</a>
													</center>
												</td>
												{{/each}}
												<td>
													<center>{{this.status}}</center>
												</td>
												<td hidden nowrap="nowrap"></td>
											</tr>
											{{/each}}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

</body>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<script>
	$(function () {
		$("#datepicker").datepicker({
			autoclose: true,
			todayHighlight: true
		}).datepicker('update', new Date());
	});

</script>