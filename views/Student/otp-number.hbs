<form method="POST" action="/otpnumber">
    <div class="d-flex justify-content-center align-items-center container">
        <div class="card py-5 px-3">
            <center>
                <h2 style="font-family: Georgia, 'Times New Roman', Times, serif;">MOBILE NUMBER</h2><br>
                <h5 style="margin-top: -30px;"><small style="font-family: 'Courier New', Courier, monospace;">Enter your
                        registered mobile number</small></h5>

                <div class="d-flex flex-row mt-4"><input type="tel" name="Phone" class="text-center form-control"></div>
                {{#if otpErr}}
                <p style="color: red;" class="error">{{otpErr}}</p>
                {{/if}}
                {{#if otpInvalid}}
                <p style="color: red;" class="mt-2 error">{{otpInvalid}}</p>
                {{/if}}
                <center><button type="submit" class="mt-2 btn btn-success">Send Otp</button></center>
        </div>
    </div>
</form>
